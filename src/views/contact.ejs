<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/gallery4.jpg">
    <title>Contact | Spiritual Awakening</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Google Fonts: Spiritual & Temple Style -->
    <link
      href="https://fonts.googleapis.com/css2?family=Tiro+Devanagari+Sanskrit&display=swap"
      rel="stylesheet">
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Lora&display=swap"
      rel="stylesheet">

    <!-- AOS CSS (Animate on Scroll) -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
      rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/contact.js"></script>

    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  </head>
  <body>

    <!-- Navbar -->
    <%- include('./layouts/navbar') %>

    <!-- Contact Section -->
    <section class="py-5 ">
      <div class="container">
        <div class="row align-items-start " data-aos="fade-up">
          <!-- Left: Contact Form -->
          <div class="col-md-6 mb-4">
            <div class="glassy-box p-4 rounded shadow">
              <h2 class="mb-4"><i class="bi bi-envelope-heart text-danger"></i>
                Contact Us</h2>
              <p class="mb-4 text-dark">We would love to hear from you. Please
                fill out the form below, and we'll get back to you soon.</p>

              <form id="contact-form" class="row g-3">
                <div class="col-12">
                  <input type="text" class="form-control" name="name"
                    id="contact-name"
                    placeholder="Your Name" />
                </div>
                <div class="col-12">
                  <input type="email" class="form-control" name="email"
                    id="contact-email"
                    placeholder="Your Email" />
                </div>
                <div class="col-12">
                  <input type="text" class="form-control" name="subject"
                    id="contact-subject"
                    placeholder="Subject" />
                </div>
                <div class="col-12">
                  <textarea class="form-control" name="message" rows="4"
                    id="contact-message"
                    placeholder="Your Message"></textarea>
                </div>
                <div class="col-12 text-start">
                  <button type="submit" class="btn btn-primary"><i
                      class="bi bi-send-fill"></i> Send Message</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Right: Address -->
          <div class="col-md-6">
            <div class="glassy-box p-4 rounded shadow h-100">

              <h4 class="mb-3"><i class="bi bi-geo-alt-fill text-primary"></i>
                Name</h4>
              <p class="text-dark">Sankara narayanan @ Ramani sankar</p>

              <h4 class="mb-3"><i class="bi bi-geo-alt-fill text-primary"></i>
                Our Address</h4>
              <p class="text-dark">Sriram nagar,Busstand
                backside,<br>Rameswaram, Tamil Nadu,
                India</p>

              <h4 class="mb-3 mt-4"><i
                  class="bi bi-telephone-fill text-success"></i> Call Us</h4>
              <p><a href="tel:+919876543210"
                  class="text-decoration-none text-dark">+91 93604 38647</a></p>

              <h4 class="mb-3 mt-4"><i
                  class="bi bi-envelope-fill text-danger"></i> Email</h4>
              <p><a href="mailto:rameswaram.homam2645@gmail.com "
                  class="text-decoration-none text-dark">rameswaram.homam2645@gmail.com</a></p>

              <h4 class="mb-3 mt-4"><i
                  class="bi bi-clock-fill text-warning"></i> Timings</h4>
              <p class="text-dark">Monday - Sunday: 6 AM to 6 PM</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <%- include('./layouts/footer') %>

    <!-- Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/rellax@1.12.1/rellax.min.js"></script>
    <script>
  AOS.init({ duration: 1000, once: true });
  const rellax = new Rellax('.rellax');
</script>

  </body>
</html>
