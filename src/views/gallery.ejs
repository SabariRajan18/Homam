<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/gallery4.jpg">
    <title>Gallery - Homam Booking</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Google Fonts: Spiritual & Temple Style -->
    <link
      href="https://fonts.googleapis.com/css2?family=Tiro+Devanagari+Sanskrit&display=swap"
      rel="stylesheet">
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Lora&display=swap"
      rel="stylesheet">

    <!-- AOS CSS (Animate on Scroll) -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
      rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/gallery.css" />

  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/home">Thila Homam Rameswaram</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarNav" aria-controls="navbarNav"
          aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto fw-semibold">
            <li class="nav-item"><a class="nav-link" href="/">Thila
                Homam</a></li>
            <li class="nav-item"><a class="nav-link" href="/tariff">Homam
                Tariff</a></li>
            <li class="nav-item"><a class="nav-link active"
                href="/gallery">Gallery</a></li>
            <!-- <li class="nav-item"><a class="nav-link" href="/testimonials">Testimonials</a></li> -->
            <li class="nav-item"><a class="nav-link"
                href="/about">About</a></li>
            <li class="nav-item"><a class="nav-link"
                href="/contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Gallery Section -->
    <section id="gallery" class="py-5 ">
      <div class="container" data-aos="fade-up">
        <h2 class="mb-4 text-center">
          <i class="bi bi-images me-2"></i>Our Gallery
        </h2>
        <p class="text-center mb-5 text-muted">
          Experience the spiritual essence and rituals of Thila Homam through
          our curated gallery.
        </p>
        <div class="gallery-grid">
          <% data.forEach((img, index) => { %>
          <div class="gallery-item gallery-item-lg">
            <img
              src="<%= `${req.protocol}://${req.get('host')}/uploads/${img.image}` %>"
              alt="Priest performing Thila Homam ritual in Rameswaram" />
          </div>

          <% }) %>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-5">
      <div class="container">
        <div class="row text-center text-md-start">

          <!-- Contact Info -->
          <div class="col-md-4 mb-4">
            <h5 class="mb-3">Contact Us</h5>
            <p><i class="fas fa-map-marker-alt me-2"></i> Rameswaram, Tamil
              Nadu, India</p>
            <p><i class="fas fa-envelope me-2"></i> contact@homambooking.in</p>
            <p><i class="fas fa-phone me-2"></i> +91 98765 43210</p>
          </div>

          <!-- Quick Links -->
          <div class="col-md-4 mb-4">
            <h5 class="mb-3">Quick Links</h5>
            <ul class="list-unstyled">
              <li><a href="/home"
                  class="text-white text-decoration-none">Home</a></li>
              <li><a href="/tariff"
                  class="text-white text-decoration-none">Homam Tariff</a></li>
              <li><a href="/gallery"
                  class="text-white text-decoration-none">Gallery</a></li>
              <li><a href="/about"
                  class="text-white text-decoration-none">About</a></li>
              <li><a href="/contact"
                  class="text-white text-decoration-none">Contact</a></li>
            </ul>
          </div>

          <!-- Map -->
          <div class="col-md-4 mb-4">
            <h5 class="mb-3">Temple Location</h5>
            <div class="map-responsive">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15852.598657783845!2d79.30072734445926!3d9.287570087210737!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3b01e3dc4949ac6d%3A0x9ffdab70cc4aa4ba!2sSri%20Arulmigu%20Ramanathaswamy%20Temple!5e1!3m2!1sen!2sin!4v1748255426574!5m2!1sen!2sin"
                width="100%" height="200" style="border:0; border-radius: 10px;"
                allowfullscreen loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
              </iframe>
            </div>
          </div>
        </div>

        <!-- Bottom -->
        <div class="text-center mt-4 border-top pt-3">
          <p class="mb-0">&copy; 2025 Homam Booking. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- AOS -->
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 1000, once: true });
    </script>
  </body>
</html>
